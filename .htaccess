RewriteEngine On

# Skip redirects for localhost
RewriteCond %{HTTP_HOST} ^localhost [NC,OR]
RewriteCond %{HTTP_HOST} ^127\.0\.0\.1
RewriteCond %{HTTP_HOST} ^127\.0\.0\.1
RewriteRule .* - [L]

# Fix for missing Authorization Header
SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1

# Force www (only for production) - Query String korumalı
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteCond %{HTTP_HOST} !^localhost [NC]
RewriteCond %{HTTP_HOST} !^127\.0\.0\.1
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L,QSA]

# Force HTTPS (only for production) - Query String korumalı
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} !^localhost [NC]
RewriteCond %{HTTP_HOST} !^127\.0\.0\.1
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,QSA]

# SEO Friendly URLs
# Static Pages
RewriteRule ^hakkimizda/?$ about.php [L]
RewriteRule ^iletisim/?$ contact.php [L]
RewriteRule ^sikca-sorulanlar/?$ firm-faq.php [L]
RewriteRule ^firmalar/?$ customer/firms.php [L]
RewriteRule ^kampanyalar/?$ customer/campaigns.php [L]
RewriteRule ^firma-girisi/?$ firm/login.php [L]
RewriteRule ^firma-kayit/?$ firm/register.php [L]

# Dynamic Pages (Legal etc)
RewriteRule ^yasal/([a-z0-9-]+)/?$ pages.php?slug=$1 [L,QSA]

# Firm Details (Slug + ID)
# Matches: /firma/firma-adi-ID
RewriteRule ^firma/(.*)-([a-zA-Z0-9_-]+)/?$ customer/firm-detail.php?id=$2&slug=$1 [L,QSA]

RewriteRule ^sitemap\.xml$ sitemap.php [L]

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresDefault "access plus 2 days"
</IfModule>

# GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# =============================================
# GÜVENLİK AYARLARI
# =============================================

# Dizin listelemeyi kapat
Options -Indexes

# Sunucu imzasını gizle
ServerSignature Off

# Güvenlik Header'ları
<IfModule mod_headers.c>
    # XSS Koruması
    Header always set X-XSS-Protection "1; mode=block"
    
    # MIME Type Sniffing Engeli
    Header always set X-Content-Type-Options "nosniff"
    
    # Clickjacking Koruması (iframe'e alınmayı engelle)
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # HSTS (Strict Transport Security) - Sadece HTTPS
    # Not: Localhost'ta sorun çıkartabilir, canlıda aktif
    # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Permissions Policy (eski Feature-Policy)
    Header always set Permissions-Policy "geolocation=(self), microphone=(), camera=()"
</IfModule>

# =============================================
# HASSAS DOSYALARI KORU
# =============================================

# Config dosyalarına erişimi engelle
<FilesMatch "^(app|firebase|paytr_settings|secrets)\.php$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Deny from all
    </IfModule>
</FilesMatch>

# JSON config dosyalarına erişimi engelle (footer-settings.json hariç)
<FilesMatch "^(?!footer-settings\.json$).*\.json$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Deny from all
    </IfModule>
</FilesMatch>

# Composer ve git dosyalarını engelle
<FilesMatch "(composer\.(json|lock)|\.git|\.env|\.htpasswd)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Deny from all
    </IfModule>
</FilesMatch>

# Log ve backup dosyalarını engelle
<FilesMatch "\.(log|sql|bak|old|backup|tmp)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Deny from all
    </IfModule>
</FilesMatch>
